# ===================
# 应用配置
# ===================
NODE_ENV=development
APP_PORT=3000
APP_NAME=ts-admin
APP_URL=http://localhost:3000

# ===================
# 数据库配置
# ===================
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/ts_admin?schema=public"

# ===================
# Redis配置
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===================
# JWT配置
# ===================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# ===================
# 文件上传配置
# ===================
# 存储类型: local | qiniu
FILE_STORAGE=local
FILE_LOCAL_PATH=./uploads
FILE_MAX_SIZE=10485760

# 七牛云 (FILE_STORAGE=qiniu时配置)
QINIU_ACCESS_KEY=
QINIU_SECRET_KEY=
QINIU_BUCKET=
QINIU_DOMAIN=
QINIU_ZONE=z0

# ===================
# 微信公众号配置
# ===================
WECHAT_APP_ID=
WECHAT_APP_SECRET=
